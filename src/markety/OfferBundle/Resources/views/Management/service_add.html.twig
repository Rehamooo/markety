{% extends '::base.html.twig' %}

{% block body %}

    <form class="row" method="post" action="{{ path('markety_offer_persist') }}">

        <div class="row">
            <div class="col-sm-3 grey">
                عنوان العرض
            </div>
            <div class="col-sm-9 white">
                <input type="text" name="title"/>
            </div>
        </div>

        <div class="row" >
            <div class="col-sm-3 grey">
                الحد الأدنى للسعر
            </div>
            <div class="col-sm-9 white">
                <input type="text" name="price_lower"/>
            </div>
        </div>


        <div class="row" >
            <div class="col-sm-3 grey">
                الحد الأعلى للسعر
            </div>
            <div class="col-sm-9 white">
                <input type="text" name="price_upper"/>
            </div>
        </div>

        <div class="row" >
            <div class="col-sm-3 grey">
نوع السعر
            </div>
            <div class="col-sm-9 white">
                <input type="text" name="price_type"/>
            </div>
        </div>



        <div class="row" >
            <div class="col-sm-3 grey">
  الاختصاص
            </div>
            <div class="col-sm-9 white">

                <select name="tag">

                    {% for tag in tags %}
                        <option value="{{ tag.id }}">{{ tag.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="row" >
            <div class="col-sm-3 grey">
           الموقع
            </div>
            <div class="col-sm-9 white">

                <select name="location">

                    {% for location in locations %}
                        <option value="{{ location.id }}">{{ location.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <input type="submit">
            </div>
        </div>

    </form>

{% endblock body %}